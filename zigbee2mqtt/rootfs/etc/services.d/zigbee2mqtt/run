#!/usr/bin/with-contenv bashio
# ==============================================================================
# Home Assistant Community Add-on: Zigbee2MQTT
# Starts Zigbee2MQTT
# ==============================================================================

cd /opt/zigbee2mqtt || bashio::exit.nok "Could not change directory to Zigbee2mqtt"

bashio::log.info 'Starting Zigbee2MQTT...'

exec npm start